<%- include('../partials/head') %>
<title>Home page</title>
</head>

<%- include('../partials/body') %>

<div class="max-w-6xl mx-auto px-6 py-10">

  <h1 class="text-4xl font-bold text-center text-red-500 mb-8">
    All House List
  </h1>

  <!-- Cards Grid -->
  <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
    <% store.forEach((home,index)=>{ %>

      <!-- Card 1 -->
    <div class="bg-white border border-gray-200 rounded-xl shadow hover:shadow-lg transition overflow-hidden">
      <img
        src="<%= home.image  %>"
        alt="Home Image"
        class="w-full h-48 object-cover"
      />

      <div class="p-5">
        <h2 class="text-xl font-semibold text-gray-800 mb-1">
         <%= home.houseName  %>
        </h2>
        <p class="text-gray-500 text-sm mb-3">
         <%= home.location  %>
        </p>

        <p class="text-lg font-bold text-red-500 mb-4">
          <%= home.price  %> / night
        </p>

        <div class="flex items-center gap-2">
          <a href="/house-detail/<%= home.id %>" class="w-full">
          <button
           class="w-full  bg-red-500 text-white py-2 rounded-lg font-semibold hover:bg-red-600 transition"
          >
           View Details
          </button>
        </a>

        <form action="/fevourite" method="post">
          <input type="hidden" name="id" value="<%= home.id %>">
          <button
           class="w-full whitespace-nowrap px-2 bg-green-500 text-white py-2 rounded-lg font-semibold hover:bg-gereen-600 transition"
          >
           Add to Fevourite
          </button>
        </form>
        </div>
      </div>
    </div>

   <% }) %>

    
  </div>

</div>

<%- include('../partials/footer') %>
